@import "version.inc" ;
@import "outercurve.inc" ;

#define { 
    flavor: "${COMP??vc10}"; 
    arch : "${PLAT??x86}";
}

package {
    name: "libtiff-dev[${flavor}]";
    version: "${package-version}";
    arch : "${arch}";
    display-name: "libtiff Developer library";
}

metadata {
    summary: "The libtiff developer library";
    description: @"This software provides support for the Tag Image File Format (TIFF), a widely used format for storing image data."; 
    icon: @"libtiff.png";
    author-version : "4.0.1";
    bug-tracker: "https://github.com/coapp-packages/libtiff/issues";
    stability : "0";
    licenses : {
        CUSTOM
    };
}

files[libs] {
    root: @"..\output\vc10\${arch}\Release\bin\";
    
    include: {
        "*.lib",
    };
    
    trim-path: all;
};

requires {
    package: "libtiff-dev-common-${package-version}-any-${Package.PublicKeyToken}";
    package: "libtiff[${flavor}]-${package-version}-${Package.Architecture}-${Package.PublicKeyToken}";
    package: "libjpeg-dev-common-8.0.3-any";
    package: "libjpeg[${flavor}]-8.0.3-${Package.Architecture}";
}

developer-library[libtiff] {
    libraries : {
        libs,
    };
}